<Window x:Class="IndustrialCamera.LogginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IndustrialCamera"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="310"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        WindowStyle="SingleBorderWindow"
        ui:ThemeManager.RequestedTheme="Dark"
        ui:TitleBar.ExtendViewIntoTitleBar="True"
        Background="#171717"
        ResizeMode="CanMinimize"
        >
    <Grid>
        <ui:NavigationView x:Name="NavigationViewControl"      
            IsBackButtonVisible="Collapsed"           
            IsSettingsVisible="False"
            IsPaneVisible="False"
            IsPaneToggleButtonVisible="True"
            OpenPaneLength="220" 
            ScrollViewer.VerticalScrollBarVisibility="Visible" 
            PaneDisplayMode="Top"
            Canvas.ZIndex="1"
            Margin="0,0.5,0,0">
            <Grid>
                <Image Source="Assets/24gf-camera3.png" Height="110" Margin="0,-320,0,0"/>
                <ui:Frame x:Name="Frame0" Grid.Row="1"/>
            </Grid>
        </ui:NavigationView>
    </Grid>
</Window>
